<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:text="Bird Taxonomy:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/bird_taxonomy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Nest Status:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/nest_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Number of Eggs:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/egg_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Number of Eggs"
                android:inputType="number"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Egg Stage:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/egg_stage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Number of Nestlings:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/nestling_number"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Number of Nestlings"
                android:inputType="number"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Nestling Stage:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/nestling_stage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Nearby Species:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/nearby_species"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Nearby Species Activity:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:id="@+id/nearby_species_activity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>

        <TextView
                android:text="Notes:"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <EditText
                android:background="#BBBBBB"
                android:id="@+id/notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Notes Here"
                android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
                android:minLines="3"
                android:maxLines="10"
                android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>